<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Course</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">P4 Courses App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/courses">Courses</a></li>
          <li class="nav-item"><a class="nav-link" href="/videos">Videos</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h1 class="text-center">Daftar Course</h1>

    <% courses.forEach(course => { %>
      <div class="card shadow mt-4">
        <div class="card-body">
          <h3 class="card-title"><%= course.title %></h3>
          <p class="card-text"><%= course.description %></p>
          
          <!-- Video terkait -->
          <div class="row">
            <% course.videos.forEach(video => { %>
              <div class="col-md-4 mb-3">
                <div class="card">
                  <iframe class="card-img-top" width="100%" height="200" src="<%= video.url %>" frameborder="0" allowfullscreen></iframe>
                  <div class="card-body">
                    <h5 class="card-title"><%= video.title %></h5>
                    <p class="card-text"><%= video.description %></p>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>

          <a href="/courses/<%= course._id %>" class="btn btn-primary">Lihat Course</a>
        </div>
      </div>
    <% }); %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
