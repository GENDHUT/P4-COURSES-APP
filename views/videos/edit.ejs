<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Edit Video</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Konten -->
  <div class="container mt-4">
    <h1 class="mb-3">Edit Video</h1>
    <form action="/videos/edit/<%= video.id %>" method="POST" class="card p-4 shadow-sm">
      <div class="mb-3">
        <label for="course_id" class="form-label">Pilih Course:</label>
        <select class="form-select" name="course_id" id="course_id" required>
          <% courses.forEach(course => { %>
            <option value="<%= course.id %>" <% if (course.id === video.course_id) { %>selected<% } %>><%= course.title %></option>
          <% }); %>
        </select>
      </div>
      <div class="mb-3">
        <label for="title" class="form-label">Judul Video:</label>
        <input type="text" class="form-control" name="title" id="title" value="<%= video.title %>" required>
      </div>
      <div class="mb-3">
        <label for="video_url" class="form-label">URL Video (YouTube):</label>
        <input type="text" class="form-control" name="video_url" id="video_url" value="<%= video.video_url %>" required>
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
      <a href="/videos" class="btn btn-secondary">Kembali</a>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
