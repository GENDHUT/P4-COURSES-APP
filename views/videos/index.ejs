<!DOCTYPE html>
<html>
<head>
  <title>Daftar Videos</title>
  <!-- Sertakan Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">P4 Courses App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link text-white" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="/videos">Videos</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Konten Utama -->
  <div class="container mt-4">
    <h1>Daftar Videos</h1>
    <a href="/videos/create" class="btn btn-primary mb-3">Tambah Video Baru</a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Course ID</th>
          <th>Judul</th>
          <th>Video</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% videos.forEach(video => { %>
          <tr>
            <td><%= video.id %></td>
            <td><%= video.course_id %></td>
            <td><%= video.title %></td>
            <td>
              <!-- Menampilkan video dengan iframe (pastikan video_url adalah link embed YouTube) -->
              <iframe width="200" height="150" src="<%= video.video_url %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </td>
            <td>
              <a href="/videos/edit/<%= video.id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/videos/delete/<%= video.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Yakin ingin menghapus video ini?')">Delete</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- Sertakan Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
